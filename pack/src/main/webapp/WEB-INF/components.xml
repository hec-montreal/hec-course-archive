<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<import resource="spring-hibernate.xml" />

	<!--  create a HecCourseArchiveService bean, give it the dao for archive table -->
	<bean id="ca.hec.archive.api.HecCourseArchiveService"
			class="ca.hec.archive.impl.HecCourseArchiveServiceImpl"
			singleton="true">
 		<property name="archiveDao" ref="ca.hec.archive.dao.ArchiveDao" />
		<property name="authzGroupService" ref="org.sakaiproject.authz.api.AuthzGroupService" />
		<property name="cmService" ref="org.sakaiproject.coursemanagement.api.CourseManagementService" />
		<property name="catalogDescriptionService" ref="ca.hec.cdm.api.CatalogDescriptionService" />
	</bean>
	
    <!-- Quartz Jobs -->
    
    <!-- ImportPdfZc1Job -->
	<bean id="ca.hec.archive.jobs.ImportPdfZc1Job"
		class="ca.hec.archive.jobs.ImportPdfZc1Job">
		<property name="authzGroupService" ref="org.sakaiproject.authz.api.AuthzGroupService" />
		<property name="contentHostingService"
			ref="org.sakaiproject.content.api.ContentHostingService" />
		<property name="eventTrackingService"
			ref="org.sakaiproject.event.api.EventTrackingService" />
		<property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
		<property name="usageSessionService"
			ref="org.sakaiproject.event.api.UsageSessionService" />
		<property name="userDirectoryService"
			ref="org.sakaiproject.user.api.UserDirectoryService" />
		<property name="osylSecurityService"
			ref="org.sakaiquebec.opensyllabus.common.api.OsylSecurityService" />
	</bean>	
	<bean id="ImportPdfZc1Job"
       class="org.sakaiproject.component.app.scheduler.jobs.SpringJobBeanWrapper"
       singleton="true" init-method="init">
       <property name="beanId">
          <value>ca.hec.archive.jobs.ImportPdfZc1Job</value>
       </property>
       <property name="jobName">
          <value>importer les plans de cours ZC1 en HTML vers des PDF ZoneCours2</value>
       </property>
       <property name="schedulerManager">
          <ref bean="org.sakaiproject.api.app.scheduler.SchedulerManager" />
       </property>
    </bean>
    
    <!-- ImportZc1MetadatasJob -->
    <bean id="ca.hec.archive.jobs.ImportZc1MetadatasJob"
		class="ca.hec.archive.jobs.ImportZc1MetadatasJob">
		<property name="archiveDao" ref="ca.hec.archive.dao.ArchiveDao" />
		<property name="catalogDescriptionDao" ref="ca.hec.cdm.api.CatalogDescriptionDao" />		
	</bean>	
	<bean id="ImportZc1MetadatasJob"
       class="org.sakaiproject.component.app.scheduler.jobs.SpringJobBeanWrapper"
       singleton="true" init-method="init">
       <property name="beanId">
          <value>ca.hec.archive.jobs.ImportZc1MetadatasJob</value>
       </property>
       <property name="jobName">
          <value>importer les metadatas de ZC1 vers ZoneCours2</value>
       </property>
       <property name="schedulerManager">
          <ref bean="org.sakaiproject.api.app.scheduler.SchedulerManager" />
       </property>
    </bean>
	

</beans>
