			<dependency>
				<groupId>ca.hec</groupId>
				<artifactId>hec-course-archive-impl</artifactId>
				<version>1.0-SNAPSHOT</version>
				<scope>runtime</scope>
			</dependency>

			<dependency>
				<groupId>ca.hec.cdm</groupId>
				<artifactId>cdm-api</artifactId>
				<version>1.0-SNAPSHOT</version>
				<scope>provided</scope>
			</dependency>

   			<dependency>
      			<groupId>org.sakaiquebec.opensyllabus</groupId>
